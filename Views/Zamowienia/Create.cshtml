@model MagazynPro.Models.Zamowienie

@{
    ViewData["Title"] = "Nowe zamówienie";
}

<h1>Dodaj nowe zamówienie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <!-- Pole ukryte dla KlientId, przypisywane automatycznie w kontrolerze -->
            <input type="hidden" asp-for="KlientId" />
            <div class="form-group">
                <label value="Nazwa Produktu" class="control-label"></label>
                <select asp-for="ProduktId" class="form-control" asp-items="ViewBag.Produkty"></select>
                <span asp-validation-for="ProduktId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilosc" class="control-label"></label>
                <input id="Ilosc" asp-for="Ilosc" class="form-control" type="number" min="1" />
                <span asp-validation-for="Ilosc" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Dodaj zamówienie</button>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
